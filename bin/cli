#!/usr/bin/env node
'use strict';

const meow = require('meow');
const { transfer } = require('../lib/transfer');

const cli = meow(
  `
  Usage
    $ transfer put <input>
    $ transfer get <file_short_name>

  Options
    --silent, -s  Don't produce any output

  Examples
    $ transfer put ./README.md
    $ transfer get daily_tomato_orangutan --silent
`,
  {
    flags: {
      silent: {
        type: 'boolean',
        alias: 's'
      },
      help: {
        type: 'boolean',
        alias: 'h'
      },
      version: {
        type: 'boolean',
        alias: 'v'
      }
    }
  }
);

(async () => {
  if (cli.flags.version) {
    return cli.showVersion();
  }
  if (cli.flags.help) {
    return cli.showHelp();
  }

  transfer(cli.input[0], cli.input[1], cli.flags);
})();
