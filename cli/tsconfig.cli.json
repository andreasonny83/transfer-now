{
  "compilerOptions": {
    "module": "CommonJS",
    "strict": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "target": "es5",
    "outDir": "lib",
    "moduleResolution": "Node",
    "removeComments": true,
    "lib": ["es2015"],
    "rootDir": "./src",
    "pretty": false,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
